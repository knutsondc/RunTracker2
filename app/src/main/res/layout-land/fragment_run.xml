<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:descendantFocusability="afterDescendants">
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingRight="5sp"
            android:paddingEnd="5sp"
            android:text="@string/run_fragment_started"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>
        <TextView android:id="@+id/run_startedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="5sp"
            android:text="@string/starting_address"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>
        <TextView android:id="@+id/run_starting_addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start" />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingRight="5sp"
            android:paddingEnd="5sp"
            android:text="@string/starting_latitude"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>
        <TextView android:id="@+id/run_starting_latitudeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="5sp"
            android:text="@string/starting_longitude"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>
        <TextView android:id="@+id/run_starting_longitudeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingRight="5sp"
            android:paddingEnd="5sp"
            android:text="@string/starting_altitude"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>
        <TextView android:id="@+id/run__starting_altitudeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start" />
    </TableRow>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:descendantFocusability="afterDescendants">
        <!--
        style="?android:attr/buttonBarStyle"
        -->
        <Button android:id="@+id/run_startButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/start"
                tools:ignore="ButtonStyle"/>
        <!--
        style="?android:attr/buttonBarButtonStyle"
        -->
        <Button android:id="@+id/run_stopButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stop"
                tools:ignore="ButtonStyle"/>
        <!--
        style="?android:attr/buttonBarButtonStyle"
        -->
        <Button android:id="@+id/run_mapButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/map"
                tools:ignore="ButtonStyle"/>
        <!--
        style="?android:attr/buttonBarButtonStyle"
        -->
    </LinearLayout>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingRight="5sp"
            android:paddingEnd="5sp"
            android:text="@string/run_fragment_ended"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>
        <TextView
            android:id="@+id/run_endedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="5sp"
            android:text="@string/ending_address"
            tools:ignore="RtlHardcoded,RtlSymmetry" />
        <TextView android:id="@+id/run_ending_address_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingRight="5sp"
            android:paddingEnd="5sp"
            android:text="@string/ending_latitude"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>
        <TextView android:id="@+id/run_ending_latitudeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="5sp"
            android:text="@string/ending_longitude"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>
        <TextView android:id="@+id/run_ending_longitudeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingRight="5sp"
            android:paddingEnd="5sp"
            android:text="@string/ending_altitude"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>
        <TextView android:id="@+id/run__ending_altitudeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingRight="5sp"
            android:paddingEnd="5sp"
            android:text="@string/elapsed_time"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>
        <TextView android:id="@+id/run_durationTextView"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="25sp"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingRight="5sp"
            android:paddingEnd="5sp"
            android:text="@string/distance_covered"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>
        <TextView android:id="@+id/distance_coveredTextView"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="25sp"
            />
    </TableRow>
</TableLayout>
